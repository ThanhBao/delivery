@model IEnumerable<LGT_Project.Models.Product>
@{
    ViewBag.Title = "Sản Phẩm";

}

<div>

    <a href="@Url.Action("Create", "Product")" class="btn btn-primary"><i class="fa fa-plus"></i> Thêm mới</a>
</div>

<br /><br />
<div id="product" class="table-responsive ">
    <table class="table table-condensed table-hover table-bordered table-striped table">
        <tr>
            <th>
                Tên sản phẩm
            </th>

            <th>
                Giá thành
            </th>
            <th>
                Loại hàng
            </th>
            <th>
                Nhà cung cấp
            </th>

            <th>
                Khối lượng
            </th>
            <th>
                Số lượng (Kg)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Supplier.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitWeight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitInStock)
                </td>

                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "Product", new { id = item.ProductID })" aria-label="Edit">
                        <i class="fa fa-edit" aria-hidden="true"></i>
                    </a>
                    <a class="btn btn-sm btn-info" href="@Url.Action("Details", "Product", new { id = item.ProductID })" aria-label="Details">
                        <i class="fa fa-info" aria-hidden="true"></i>
                    </a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Product", new { id = item.ProductID })" aria-label="Delete">
                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                    </a>
                </td>

            </tr>
        }


    </table>
</div>


