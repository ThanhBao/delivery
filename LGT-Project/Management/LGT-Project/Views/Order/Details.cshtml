@using LGT_Project.Models;
@model Tuple<Order, IEnumerable<OrderDetail>>
@{
    ViewBag.Title = "Đơn hàng";
    ViewBag.SubTitle = "Chi tiết";
}

<div class="row">
    <div class="col-md-6">
        <dl class="dl-horizontal ">
            <dt>
                Mã đặt hàng :
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.OrderID)
            </dd>
            <dt>
                Tên khách hàng :
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.Customer.First_Name)
            </dd>
            <dt>
                Địa chỉ khách hàng :
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.Customer.Address1)
            </dd>
            <dt>
                Liên lạc :
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.Customer.Mobile1)
            </dd>

        </dl>
    </div>
    <div class="col-md-6">
        <dl class="dl-horizontal ">
            <dt>
                Mã thanh toán
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.PaymentID)
            </dd>
            <dt>
                Tên người giao hàng
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.ShippingID)
            </dd>
            <dt>
                Địa chỉ giao hàng
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.ShippingDetail.Address)
            </dd>

        </dl>
    </div>
</div>
<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading" style="padding:5px 15px">
            <h4>Items</h4>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="">
                    <div class="table-responsive col-md-off ">
                        <table class="table table-hover ">
                            <thead>
                                <tr>
                                    <th>Thứ tự</th>
                                    <th>Tên mặt hàng</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                    <th>Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int i = 0;}
                                @foreach (var item in Model.Item2)
                                {
                                    i++;
                                    <tr>
                                        <td>@i.ToString()</td>
                                        <td>@item.Product.Name</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.UnitPrice</td>
                                        <td>@item.TotalAmount</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="5"><h2></h2></td>

                                </tr>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th>@ViewBag.TotalItems</th>
                                    <th></th>
                                    <th>@ViewBag.Amount </th>
                                </tr>
                                <tr>
                                    <th>Giảm giá</th>
                                    <th colspan="3"></th>
                                    <th>@ViewBag.Discount</th>
                                </tr>
                                <tr class="bg-info">
                                    <th>Tổng tiền</th>
                                    <th colspan="3"></th>
                                    <th>@ViewBag.TAmount</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.ActionLink("Quay lại", "Index", "Order", new { @class = "btn btn-success" })

