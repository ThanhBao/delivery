@model IEnumerable<LGT_Project.Models.Driver>
@{
    ViewBag.Title = "Người Giao Hàng ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tài xế</h2>

<p>
    <a href="@Url.Action("Create", "Deliver")" class="btn btn-primary"><i class="fa fa-plus"></i> Thêm mới</a>
</p>
<table class="table">
    <tr>
        <th>
            Họ
        </th>
        <th>
            Tên
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Tên phương tiện
        </th>
        <th>
            Biển số xe
        </th>
        <th>
            Tải trọng (kg)
        </th>
        <th>
            Bằng lái
        </th>
        <th>
            Tình trạng xe
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transport.TransportName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Transport.LicensePlate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Transport.Weight)

            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Driver_License)
            </td>
            @*@Html.DisplayFor(modelItem => item.Status)*@

            @if (item.Status == 1 || item.Status == 2)
            {
                <td>
                    <span class="badge badge-info">Đang bảo trì</span>
                </td>
            }
            else
            {
                <td>
                    <span class="badge badge-light">Đang chạy</span>
                </td>
            }


            <td>
                <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "Deliver", new { id = item.Driver_ID })" aria-label="Edit">
                    <i class="fa fa-edit" aria-hidden="true"></i>
                </a>
                <a class="btn btn-sm btn-info" href="@Url.Action("Details", "Deliver", new { id = item.Driver_ID })" aria-label="Details">
                    <i class="fa fa-info" aria-hidden="true"></i>
                </a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Deliver", new { id = item.Driver_ID })" aria-label="Delete">
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                </a>
            </td>



        </tr>
    }

</table>


