@model LGT_Project.Models.Driver
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Driver</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Họ :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Tên :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            Trạng thái :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            Số điện thoại :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            Bằng lái xe :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Driver_License)
        </dd>

        <dt>
            Mã bằng lái xe :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LicenseType.License_ID)
        </dd>

        <dt>
            Lưu ý :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Order.Notes)
        </dd>

        <dt>
            Tên phương tiện :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Transport.TransportName)
        </dd>

        <dt>
            Tên hãng sản xuất :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Transport1.TransportName)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Cập nhật", "Edit", new { id = Model.Driver_ID }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Quay lại", "Index", "Deliver", new { @class = "btn btn-success" })
</p>


